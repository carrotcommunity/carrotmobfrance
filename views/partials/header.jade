nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
        .navbar-white
            .container
                .navbar-header
                    button.navbar-toggle(type='button' data-toggle='collapse', data-target='.navbar-collapse')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='/')
                        img.img-responsive(src='/images/carrotmob-254x60.png',alt='Carrotmob')
                .navbar-collapse.collapse
                    ul.nav.navbar-nav.navbar-right
                        - var active =
                        li(class=(req.path == '/' ? 'active' : '')).hidden-md.hidden-sm
                            a(href='/') Découvrir
                        li(class=(req.path.indexOf('campaign') != -1 ? 'active' : '')).hidden-sm
                            a(href='/campaign/current') Campagnes
                        li(class=(req.path.indexOf('manifesto') != -1 ? 'active' : ''))
                            a(href='/manifesto') Manifeste
                        li#navbar-orange
                            if session && session.passport && session.passport.user
                                a(href='/logout')
                                    img(src=session.passport.user.picture ? session.passport.user.picture : (session.passport.user.gender == 1 ? ' /images/icon-login-carrotmobber-woman.png' : '/images/icon-login-carrotmobber-man.png'))
                                    span  Me déconnecter
                            else
                                a(href='/connect')
                                    img(src='/images/icon-login-carrotmobber-man.png')
                                    span  Me connecter
        .navbar-shadow