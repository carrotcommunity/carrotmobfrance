extends ../layout

block body
    .background-hawai
        .container
            .layout-form
                .block-form.block-form-bg
                    .block-header
                        h2 <img src="/images/carrotmob-60x60.png" alt="Carrotmob"> Se Connecter</h2>
                    .block-content
                        h3 J'utilise mon compte Facebook
                        .content-text
                            form(method='post', action='/fbsignin')
                                input(type='hidden', name='_csrf' value=_csrf)
                                button.btn-facebook(type='submit')
                        .separator
                        h3 J'utilise mon compte Carrotmobber
                        form.form-horizontal(method='post', action='signin')
                            input(type='hidden', name='_csrf' value=_csrf)
                            if info
                                .error-msg = '<span class="glyphicon glyphicon glyphicon-remove"></span>' + info
                            .control-groupe
                                .controls
                                    input.form-control(type='text',id='username',name='username',placeholder='adresse email')
                            .control-group
                                .controls
                                    input.form-control(type='password',id='password',name='password',placeholder='mot de passe')
                            .control-group
                                .controls
                                    button.btn-submit(type='submit') OK
                            p
                                a(href="/forgot_password") > J'ai oubliÃ© mon mot de passe
                            p
                                a(href="/signup") > Pas encore inscrit ?
        .bottom-shadow